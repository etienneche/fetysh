<div class="bg-image pt-4">
  <div class="col-4 offset-4" style="margin-top:100px">
    <div class="card bg-white p-4">
      <h2>Create your article</h2>
      <div class="form-group">
        <%= simple_form_for @article do |f| %>
        <%= f.input   :title,
        placeholder: "Article title",
        label: false,
        required: true %>
        <%= f.input   :content,
        placeholder: "Content",
        label: false,
        required: true %>
        <%= f.input   :category_id,
        placeholder: "Article category",
        :collection => @categories,
        label: false,
        required: true %>

        <div class="form-actions btn-login">
          <%= f.button :submit, "Create an Article" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
