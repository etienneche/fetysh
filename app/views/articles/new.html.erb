<div class="bg-image">
  <div id="box-simple-form" class="col-6">
    <div id="simple-form-new" class="card bg-white">
      <div class="typewriter">
        <h2>Create Your Own Article</h2>
      </div>
      <div class="form-group">
        <%= simple_form_for [@article] do |f| %>
        <%= f.input   :title,
        placeholder: "Article title",
        label: false,
        required: true %>
        <%= f.rich_text_area  :content %>
        <%= f.input   :category_id,
        placeholder: "Article category",
        :collection => @categories,
        label: false,
        required: true %>
        <%= f.input :img_url,
        placeholder: "Article picture url",
        label: false,
        required: true %>


        <div class="form-actions btn-login">
          <%= f.button :submit, "Create an Article",  id: "btn-new-form", class:"btn-red" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
