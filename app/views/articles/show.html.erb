<!-- ARTICLES SINGLE -->
<div class="container">
  <div class="d-flex container-header">

    <div class="head head-card-margin" >
      <h6>#<%= @category.name %></h6>
      <h1><%= @article.title %></h1>
      <h4>By <%= @article.author %></h4>
      <p>Post <%= @article.created_at.strftime("%d.%B %Y") %></p>


      <div class="tabs">
       <%= (@article_love_count) %>
       <% color = current_user.loved?(@article) ? "red" : "gray" %>

       <%= link_to love_category_article_path(@category, @article), method: :post do %>

       <i class="fas fa-heart" id="coracao"></i>

       <% end %>

       <%= (@article_wtt_count) %>
       <% color = current_user.wtted?(@article) ? "red" : "gray" %>

       <%= link_to wtt_category_article_path(@category, @article), method: :post do %>

       <i class="fas fa-bookmark" id="marca"></i>

       <% end %>

       <%#= (@article_save_count) %>
       <%# color = current_user.saved?(@article) ? "red" : "gray" %>

       <%#= link_to save_category_article_path(@category, @article), method: :post do %>
       <!-- <i class="fas fa-save" id="salva"></i> -->
       <%# end %>
     </div>
   </div>

   <div class="image">
    <div class="box-red">

    </div>
    <img src="<%= @article.img_url %>" alt="">

  </div>
</div>

<div>

  <p class="content-article-justify article-layout"><%= @article.content.split[0..66].join(" ") %></p>
</div>
<!-- REVIEWS -->
<div class="border-bottom border-top pt-4 pl-2">
  <p>
    <button class="form-actions btn-red" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      Add a New Review
    </button>
  </p>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <div class="form-group ">
        <%= simple_form_for [@category, @article, @review] do |f| %>


        <%= f.input   :content,
        label: "Description review",
        required: true %>
        <div class="form-actions btn-login">
          <%= f.button :submit, "Post review" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <% @reviews.each do |review| %>
  <div class="border-bottom mt-4">
    <div class="d-flex">
      <img src="https://source.unsplash.com/featured/?face", class="avatar" />
    </div>
    <p class="review-content pt-2"><%= review.content %></p>
  </div>
  <% end %>
</div>
<div class="row">
  <div class="col-6" id="sticky-write-new">
   <div class="sticky-new">
     <h6>Would you like to became
      <br>an author?</h6>
      <%= link_to 'Write your 1st Article>', new_article_path
      %>
    </div>
  </div>
</div>
</div>
<!-- ARTICLES RELATED -->


<div class="container-related-articles border-top">
  <div class="container">
    <h4 class="recommend-title">Reading Recommendations</h4>
    <div style="margin-top:15px;">
      <div class="d-flex justify-content-between event-section">
        <% Article.all.sample(5).each do |article|%>
        <%= link_to category_article_path(article.category_id, article.id) do %>
        <div class="event-card">
          <div class="card-bg" style="background-image: url(<%= article.img_url %>);"></div>
          <div class="p-2">
            <p class="card-author-up">#<%= Category.find(article.category_id).name %></p>
            <h4 class="mb-4"><%= article.title %></h4>
            <p class="card-author-up author-border"><%= User.find(article.user_id).name %></p>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>



<div class="elevator-button">Back to Top</div>




  </div>
</div>

