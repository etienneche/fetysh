<div class= "d-flex pl-4">
  <div class="bg-white pt-4" style="height: 100vh; overflow:scroll; display:absolute; width: 50%;">
    <h3>More than <%= @events.size %> Events</h3>
    <% @events.each do |event| %>
    <div class="card-show border-top pt-3">
      <div class="img-card">
        <%= cl_image_tag event.img_url, crop: :fill, class:"img-event" %>
      </div>
      <div class="card-body">
        <div class="card-tag d-flex justify-content-between">
          <p class="card-author-up mb-1">#<%= Category.find(event.category_id).name %></p>
        </div>
        <h4> <%= link_to event.title, category_event_path(event.id, event.category_id) %></h4>
        <p class="card-author-up"><%= event.description %></p>
      </div>
    </div>
    <% end %>
  </div>

  <div class="p-0" style="height: 100vh; display:absolute; width: 50%;">
    <div
    id="map"
    style="width: 100%; height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>


