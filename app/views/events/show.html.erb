<div class="black-bg">
  <div class="container">
    <p class="pt-4"> <%= @event.address %> / <%= @event.category.name %></p>
    <img class="event-img-show" src=<%= @event.img_url %>>
    <div class="row">
      <div class="col-5">
        <p class="upcase pt-4"><%= @event.category.name %></p>
        <h2> <%= @event.title %></h2>
        <p><%= @event.address %></p>
        <p><strong>4.97</strong> <i class="fas fa-star"></i> (366)</p>
        <%= link_to @event.category.name, events_path, class:"btn btn-event" %>
      </div>
      <div class="col-7">
        <div class="d-flex justify-content-around pt-4 info-grey">
          <div>
            <p><i class="fas fa-clock"></i></p>
