<!-- ARTICLES -->
<div class="full-section d-block p-4">
  <div class="container">
    <div class="orgasm">
      <div class="section-landing">
        <% cat = Category.find_by(name: "orgasm")  %>
        <h2><%= link_to cat.name, category_articles_path(cat), class:"category-heading" %></h2>
      </div>

      <div class="stickyscroll">
        <div class="col" id="stickymove">
          <% article = Article.all.where(category: cat)[0] %>
          <%= link_to category_article_path(article.category_id, article.id) do %>
          <div class="d-flex flex-column sticky-element align-items-center justify-content-center" style="height: 100vh, background-image: url(<%= article.photo %>); background: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)) , url(<%= article.photor %>); background-size: cover;">
            <p class="cat-img-white pl-4 pr-4">#<%= article.category.name %></p>
            <h3 class="image-title-white pl-4 pr-4"><%= article.title %></h3>
          </div>
          <% end %>
        </div>

        <div class="col">
          <% @articles.where(category: cat)[1..3].each do |article, index| %>
          <%= link_to category_article_path(article.category_id, article.id) do %>
          <div>
            <div class="card-bg" style="background-image: url(<%= article.photor %>);"></div>
            <div class="p-2 mb-3">
              <p class="card-author-up">#<%= article.category.name %></p>
              <h4 class="mb-4"><%= article.title %></h4>
              <p class="card-author-up author-border"><%= article.source %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>

        <div class="col">
          <% @articles.where(category: cat)[4..6].each do |article, index| %>
          <%= link_to category_article_path(article.category_id, article.id) do %>
          <div>
            <div class="card-bg" style="background-image: url(<%= article.photo %>);"></div>
            <div class="p-2 mb-3">
              <p class="card-author-up">#<%= article.category.name %></p>
              <h4 class="mb-4"><%= article.title %></h4>
              <p class="card-author-up author-border"><%= article.source %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>

